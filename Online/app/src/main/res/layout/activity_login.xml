<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00211d"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context=".Login">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/transgray"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/log"
            android:paddingTop="40dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bottom"
                android:padding="10dp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:minLines="1"
                android:drawableRight="@drawable/user_name"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:fontFamily="@font/changamedium"
                android:hint="أسم المستخدم"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bottom"
                android:padding="10dp"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:lines="1"
                android:minLines="1"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:fontFamily="@font/changamedium"
                android:drawableRight="@drawable/password"
                android:gravity="end"
                android:hint="كلمة المرور"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:id="@+id/new_account"
                    android:fontFamily="@font/cairoblack"
                    android:gravity="center|bottom"
                    android:text="إنشاء حساب"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/keep_my_login"
                        android:fontFamily="@font/cairosemibold"
                        android:text="تذكرنى"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/keep_my_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:buttonTint="#038777"
                        android:checked="true"
                        android:gravity="bottom" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/changaregular"
                android:background="@drawable/background_button"
                android:text="تسجيل"
                android:id="@+id/login_button"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/radius_back"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"
        android:elevation="8dp" />

</RelativeLayout>