<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/product_image"
                    android:src="@drawable/product"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sell"
                    android:id="@+id/sell_image"/>

                <TextView
                    android:layout_width="67dp"
                    android:layout_height="31dp"
                    android:text="%10"
                    android:textSize="18sp"
                    android:id="@+id/sell"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"/>



            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ايفون تفاحة"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/product_name"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_rat"
                android:foregroundTint="@color/colormontagat"
                android:backgroundTint="@color/colormontagat"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:stepSize="0.1"
                android:isIndicator="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14,000 EG"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:id="@+id/product_price"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>