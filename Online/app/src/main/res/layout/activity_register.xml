<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        tools:context=".Login">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/changaextrabbold"
            android:gravity="center_horizontal"
            android:text="تسجيل حساب"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_margin="15dp"
            android:background="@color/transgray"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/image"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_add_black_24dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/changaregular"
                    android:hint="أسم الاول"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:id="@+id/fname"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/changaregular"
                    android:hint="أسم الثانى"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:id="@+id/lname"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/changaregular"
                    android:hint="بريد إلكترونى"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:id="@+id/email"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/changaregular"
                    android:hint="رقم التليفون"
                    android:inputType="number"
                    android:lines="1"
                    android:id="@+id/phone"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="10dp" />

                <!--<Spinner-->
                    <!--android:id="@+id/country"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:padding="5dp"-->
                    <!--android:textAlignment="textEnd"-->
                    <!--android:paddingEnd="30dp"-->
                    <!--android:entries="@array/id_type"-->
                    <!--android:fontFamily="@font/changasemibold"-->
                    <!--android:text="22"-->
                    <!--android:textColor="@android:color/black"-->
                    <!--android:textSize="16sp" />-->

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/changaregular"
                    android:hint="تاريخ الميلاد"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:id="@+id/date_of_birth"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/changaregular"
                    android:hint="كلمة المرور"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:gravity="end"
                    android:id="@+id/password"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_edittext"
                    android:fontFamily="@font/changaregular"
                    android:hint="تأكيد كلمة المرور "
                    android:inputType="textPassword"
                    android:lines="1"
                    android:gravity="end"
                    android:id="@+id/repassword"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="10dp" />



                <Button
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/background_button"
                    android:fontFamily="@font/changaregular"
                    android:text="أبدأ بشكل مجانى"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/goto_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/changaextrabbold"
                    android:text="لديك حساب بالفعل ؟"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>