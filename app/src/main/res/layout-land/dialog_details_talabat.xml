<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_gravity="center_horizontal"
    android:scrollbars="horizontal|vertical"
    tools:context=".Mabi3at.Mabi3atNavigator">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:scrollbarSize="3dp"
            android:scrollbars="horizontal|vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:src="@drawable/ic_close_black_24dp"
                    android:id="@+id/close" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:text="5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="end"
                        android:paddingEnd="20dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginEnd="3dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="رقم الطلب:"
                        />

                </LinearLayout>

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:isScrollContainer="true"
                    android:scrollbars="horizontal|vertical"
                    android:stretchColumns="0,1,2,3">

                    <!--<TableRow-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_margin="1dp"-->
                        <!--android:background="#FFFFFF">-->

                        <!--<TableRow-->
                            <!--android:layout_width="fill_parent"-->
                            <!--android:layout_height="0dp"-->
                            <!--android:layout_margin="1dp"-->
                            <!--android:layout_weight="1"-->
                            <!--android:background="#000000">-->


                        <!--</TableRow>-->
                    <!--</TableRow>-->

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:background="@color/colorPrimaryLight">

                        <TextView
                            android:layout_weight="1"
                            android:layout_column="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="الكميه "
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_column="2"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="الوحده"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_column="3"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="اسم الصنف"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_column="4"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="رقم الصنف "
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@color/white">

                        <TextView

                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:id="@+id/clientname1"
                            android:background="@drawable/cell_shape"
                            android:layout_column="1"
                            android:padding="6dp"
                            android:gravity="center"
                            android:text=" 8"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:id="@+id/address1"
                            android:layout_column="1"
                            android:layout_span="1"
                            android:layout_margin="1dp"
                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="علبه"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:id="@+id/phone1"
                            android:layout_column="1"
                            android:layout_span="1"
                            android:layout_margin="1dp"
                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="رز بلبلن"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:id="@+id/time1"
                            android:layout_column="2"
                            android:layout_margin="1dp"
                            android:background="@drawable/cell_shape"
                            android:gravity="center"
                            android:text="12"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="تم التجهيز"
                        android:id="@+id/done"
                        android:textSize="18sp"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:paddingEnd="10dp"
                        android:drawableRight="@drawable/ic_check_black_24dp"/>

                    <EditText
                        android:layout_width="120dp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:text="8"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"
                        android:enabled="false"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="إجمالى الأصناف:"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:entries="@array/print"
                        style="@style/Base.Widget.AppCompat.DropDownItem.Spinner">

                    </Spinner>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_shape"
                        android:text="طباعة" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ccc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="الأول" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="التالى" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="السابق" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="الأخير" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>